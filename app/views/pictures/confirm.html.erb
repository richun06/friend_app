<h3>以下の内容で、投稿する</h3>

<%= form_with(model: @picture, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :image_cache %>

  <p>本文: <%= @picture.content %></p>
  <p>画像: <%= image_tag(@picture.image.url) if @picture.image && @picture.image_url %></p>

  <%= form.submit "投稿する" %>
  <%= form.submit "戻る", name: 'back' %>
<% end %>