<h1>投稿一覧</h1>

<table>
  <tr>
    <th>ユーザ名</th>
    <th>本文</th>
    <th>画像</th>
  </tr>

  <% @pictures.each do |picture| %>
    <tr>
      <td><%= picture.user.name %></td>
      <td><%= picture.content %></td>
      <% if picture.image.present? %>
        <td><%= image_tag picture.image.url, :size =>'100x100' %></td>
      <% end %>
      <td><%= link_to '詳細', picture_path(picture.id), class:"btn btn-success" %></td>

      <% if picture.user_id == current_user.id %>
        <td><%= link_to '編集', edit_picture_path(picture.id), class:"btn btn-warning", data: { confirm: '本当に編集していいですか？' } %></td>
        <td><%= link_to '削除', picture_path(picture.id), method: :delete, class:"btn btn-danger", data: { confirm: '本当に削除していいですか？' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>