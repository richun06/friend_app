<h1>アカウント新規作成</h1>

<%= form_with(model: @user, local: true) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :email %>
  <%= form.text_field :email %>

  <%= form.label :password %>
  <%= form.text_field :password %>

  <%= form.label :password_confirmation %>
  <%= form.text_field :password_confirmation %>

  <%= form.submit "アカウントを作る" %>
<% end %>